<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>SRTS</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ResarchProjectDef[defName="Research_SRTSMk2"]/prerequisites</xpath>
          <value>
            <prerequisites>
              <li>SRTSBuild</li>
            </prerequisites>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ResarchProjectDef[defName="Research_SRTSMk2" or defName="Research_SRTSMk3" or defName="Research_SRTF"]/tab</xpath>
          <value>
            <tab>SRTS</tab>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>